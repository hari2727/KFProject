{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "lib": [
            "es2017", "dom"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": false,
        "outDir": "./release",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
    ]
}
